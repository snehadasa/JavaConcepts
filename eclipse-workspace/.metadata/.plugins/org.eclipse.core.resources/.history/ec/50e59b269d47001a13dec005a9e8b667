package com.javaProject.ifstatement.examples;

public class SwitchExtercisesRunner {

	public static void main(String[] args) {
		System.out.println(determineNameOfDay(6));
		System.out.println(isWeekDay(1));

	}

	public static String determineNameOfDay(int dayNumber) {
		switch (dayNumber) {
		case 0:
			return "Sunday";
		case 1:
			return "Monday";
		case 2:
			return "Tuesday";
		case 3:
			return "Wednesday";
		case 4:
			return "Thursday";
		case 5:
			return "Friday";
		case 6:
			return "Saturday";
		}

		return "Invalid Day";
	}
	
	public static String isWeekday(int dayNumber) {
		switch (dayNumber) {
		case 0:
			return false;
		case 1:
			return true;
		case 2:
			return true;
		case 3:
			return true;
		case 4:
			return true;
		case 5:
			return true;
		case 6:
			return false;
		}

		return false;
	}
}
